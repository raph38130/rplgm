CC = c++
AR = ar
BIN_DIR = suse72

TANGO_HOME = /disk/removable/projet2/TANGO

INCLUDE_DIRS =	-I $(TANGO_HOME)/include/$(BIN_DIR) -I/home/raph/ooc/include	-I .

LIB_DIRS =	-L $(TANGO_HOME)/lib/$(BIN_DIR) -L /home/raph/ooc/lib


CXXFLAGS =  -g -D_REENTRANT $(INCLUDE_DIRS)
LFLAGS =  $(LIB_DIRS) -ltango -lOB -lJTC -lpthread -ldl



CLASS =	Horloge

SVC_OBJS = 	main.o	\
		ClassFactory.o	\
		$(CLASS)Class.o	\
		$(CLASS).o

SVC_INC = 	$(CLASS)Class.h \
			$(CLASS).h

INSTANCE_NAME =	sys

%.o: %.cpp $(SVC_INC)
	$(CC) $(CXXFLAGS) -c $<
			
all: $(CLASS)

$(CLASS):	$(SVC_OBJS)
	$(CC) $(SVC_OBJS) -o $(CLASS) $(LFLAGS)

exe:
	@echo "export TANGO_HOST=tango:20000; $(CLASS) $(INSTANCE_NAME) -v2"

