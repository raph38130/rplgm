CC = g++
AR = ar
BIN_DIR = debian

TANGO_HOME   =  /mnt/b2/downloads/EPS2003/tango_cvs
INCLUDE_DIRS =  -I $(TANGO_HOME)/api/cpp/server/	\
		-I $(TANGO_HOME)/api/cpp/client/	\
		-I /home/raph/omniORB-4.0.0/build/include/ \
		-I /home/raph/omniORB-4.0.0/include/ \
		-I.
LIB_DIRS     =  -L $(TANGO_HOME)/api/cpp/server/debian/ \
		-L /home/raph/omniORB-4.0.0/build/lib

CXXFLAGS =  -g -D_REENTRANT $(INCLUDE_DIRS)
LFLAGS =  -g $(LIB_DIRS)  		\
				-ltango			\
				-lomniORB4 		\
				-lomniDynamic4	\
				-lomnithread	\
				-ldl -lpthread

CLASS =	Clock

SVC_OBJS = 	main.o	\
		ClassFactory.o	\
		$(CLASS)Class.o	\
		$(CLASS).o

SVC_INC = 	$(CLASS)Class.h \
			$(CLASS).h


%.o: %.cpp $(SVC_INC)
	$(CC) $(CXXFLAGS) -c $<
			
all: $(CLASS)

$(CLASS):	$(SVC_OBJS)
	$(CC) $(SVC_OBJS) -o $(CLASS) $(LFLAGS)

clean:
	rm -f *.o $(CLASS) core
	
install:
	cp $(CLASS) $(TANGO_HOME)/bin/$(BIN_DIR)
