JAVAC = javac -classpath ..:$(CLASSPATH)

# -----------------------------------------------------------------
#
#		The compiler flags
#
#------------------------------------------------------------------

JAVAFLAGS = -g

#-------------------------------------------------------------------


CLASS	=	Screen
CL_LIST =	$(CLASS).class\
		$(CLASS)Class.class	\
		SetTextCmd.class


PACKAGE = tg


#
# Rule for compiling
#

.SUFFIXES:	.class .java
.java.class:
	$(JAVAC) $(JAVAFLAGS) $<

#-----------------------------------------------------------------


all:	$(PACKAGE)

$(PACKAGE): 	$(CL_LIST)


doc:
	javadoc -d doc				\
	-windowtitle $(CLASS)		\
	-private 					\
	-version -author			\
	-nodeprecated				\
	-header "$(CLASS) Class"	\
	*.java

#-----------------------------------------------------------------

clean:
	rm -f *.class
