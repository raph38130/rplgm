JAVAC = javac

# -----------------------------------------------------------------
#
#		The compiler flags
#
#------------------------------------------------------------------

JAVAFLAGS = -g

#-------------------------------------------------------------------


CLASS	=	DSClock
CL_LIST	=	DSClock.class	\
		DSClockClass.class	\
		getTimeDateCmd.java	\
		setDateTimeCmd.java

PACKAGE = tg


TANGO_PROP	  =	TANGO_HOST=corvus:10000
INSTANCE_NAME =	sr
#
# Rule for compiling
#

.SUFFIXES:	.class .java
.java.class:
	$(JAVAC) $(JAVAFLAGS) $<

#-----------------------------------------------------------------


all:	$(PACKAGE)

$(PACKAGE): 	$(CL_LIST)

exe:
	java -D$(TANGO_PROP) $(CLASS) $(INSTANCE_NAME) -v2

doc:
	javadoc -d doc				\
	-windowtitle $(CLASS)		\
	-private 					\
	-version -author			\
	-nodeprecated				\
	-header "$(CLASS) Class"	\
	*.java

#-----------------------------------------------------------------

clean:
	rm -f *.class
